n=1331
rev=int(str(n)[::-1])
if n==rev:
    print("palindrome")
else:
    print("Not")

or

num = 1221
temp = num
reverse = 0
while temp > 0:
    remainder = temp % 10
    reverse = (reverse * 10) + remainder
    temp = temp // 10
if num == reverse:
  print('Palindrome')
else:
  print("Not Palindrome")
